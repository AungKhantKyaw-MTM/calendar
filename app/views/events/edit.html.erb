<div class="container my-3">
  <h1>Edit Event</h1>

  <%= form_with url: event_path(@event.id), method: :patch, local: true do |form| %>
    <div class="form-control my-3">
    <%= form.hidden_field :id, value: @event.id %>
      <%= form.label :summary, class: 'mb-1' %>
      <%= form.text_field :summary, value: @event.summary, class: 'form-control' %>
    </div>

    <div class="form-control my-3">
      <%= form.label :description, class: 'mb-1' %>
      <%= form.text_area :description, value: @event.description, class: 'form-control' %>
    </div>

    <div class="form-control my-3">
      <%= form.label :start_time, "Start Time" %>
      <%= form.datetime_select :start_time, default: @event.start.date_time.in_time_zone, class: 'form-control' %>
    </div>

    <div class="form-control my-3">
      <%= form.label :end_time, "End Time" %>
      <%= form.datetime_select :end_time, default: @event.end.date_time.in_time_zone, class: 'form-control' %>
    </div>

    <div class="my-3">
      <%= form.submit "Update Event", class: 'btn btn-primary btn-sm' %>
    </div>
  <% end %>

  <%= link_to 'Back to Events', events_path(calendar_id: params[:calendar_id]), class: 'text-danger text-decoration-none' %>

</div>