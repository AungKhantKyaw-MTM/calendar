<div class="container my-3">
  <h1>Event Lists</h1>

  <table class="table table-striped-columns table-hover">
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.items.each do |event| %>
      <tr>
        <td>
          <%= link_to event.summary, event_path(id: event.id), class: 'btn btn-sm text-primary' %>
        </td>
        <td>
          <small><%= event.start.date_time %></small>
        </td>
        <td>
          <small><%= event.end.date_time %></small>
        </td>
        <td>
           <%= link_to "Update", edit_event_path(event.id), class: 'btn btn-sm text-primary' %>
        </td>
        <td>
          <%= form_with url: event_path(event.id), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this event?" }, local: false do %>
            <%= submit_tag "Delete", data: { turbo_confirm: "Are you sure you want to delete this event?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>